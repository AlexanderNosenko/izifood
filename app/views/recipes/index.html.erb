<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Recipes</h1>
  <div class="recipes">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <div class="recipe-main-image"
        style="background-image: url('<%=recipe.images[0].url%>');"></div>
        <div class="recipe-content-overlay">
          <div class="title"><%= recipe.title %></div>
          <!-- <div class="description"><%= recipe.description %></div> -->
          <div class="details-link"><%= link_to 'Show', recipe %></div>
          <div class="add-to-menu-btn">
            <%= link_to 'Add', menu_add_recipe_path(current_user.current_menu, recipe), remote: true, method: :post%>
          </div>
          <!-- <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td> --Menu.first>
          <!-- <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>         -->
        </div>
      </div>
    <% end %>  
  </div>
  <%= paginate @recipes %>
  <%= link_to 'New Recipe', new_recipe_path %>
</div>