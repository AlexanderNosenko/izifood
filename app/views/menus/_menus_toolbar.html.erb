<div class="menus-toolbar">
  <div class="menus-navigation">
    <% @menus.each do |menu| %>
      <button class="btn menu-togle-btn" data-id="<%= menu.id %>">
        <%= "Menu #{menu.id}"%>
      </button>
    <% end %>
  </div>
  <div class="user-menus">
    <%= render @menus %>
  </div>
  <div class="tools">
    <%= link_to 'Create New', menus_path, method: :post, class: 'btn btn-success'%>
  </div>
</div>