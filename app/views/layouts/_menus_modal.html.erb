<div id="menus-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">

        <div class="title-section">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">My Menus</h4>
        </div>

        <div class="menus-navigation">
          <div class="menu-buttons">
            <% @menus.each do |menu| %>
              <button class="btn <%= menu.main ? 'btn-info' : '' %> menu-togle-btn" data-id="<%= menu.id %>">
                <%= "Menu #{menu.id}"%>
              </button>
            <% end %>  
          </div>
          <div class="tools pull-right">
            <%= link_to 'Add menu', menus_path, method: :post, class: 'btn btn-success'%>
          </div>
        </div>
      

      </div>
      <div class="modal-body">
        <%= render partial: 'menus/menus_toolbar'%>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div> -->
    </div>
  </div>
</div>